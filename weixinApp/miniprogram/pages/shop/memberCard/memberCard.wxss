/* pages/shop/memberCard/memberCard.wxss */
@import "../../shop/shop.wxss";

.mem_board {
  box-sizing: border-box;
  background-color: #f8f9fb;
}

.mem_board_item {
  display: flex;
  flex-direction: column;
  cursor: pointer;
  font-size: 20rpx;
  /* margin: 40rpx 0;
  padding: 20rpx; */
  background-color: #fff;
  padding-bottom: 25rpx;
  width:100%;
}

.mem_flex_column {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 20rpx;
  padding: 20rpx;
}

.mem_private_title {
  font-size: 30rpx;
  font-weight: bold;
  color: black;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}

.mem_private_info {
  font-size: 24rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 15rpx;
  display: flex;
  flex-direction: row;
}

.mem_private_icon {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-top: 4rpx;
}

.mem_private_li {
  margin-left: 10rpx;
  font-size: 23rpx;
}

.buyCardBtn {
  position: fixed;
  bottom: 10px;
  width: 98%;
  height: 60rpx;
  margin-left: 1%;
}

.mem_btn {
  background: red;
  color:white;
  font-weight: 400;
  border-radius: 20rpx;
  font-size:30rpx;
}