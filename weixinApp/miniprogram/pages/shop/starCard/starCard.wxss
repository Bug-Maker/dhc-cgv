/* pages/shop/starCard/starCard.wxss */
@import "../../shop/goodspay/goodspay.wxss";

.star-board {
    background-color:  #f8f9fb;
    position: fixed;
    width: 100%;
    height: 100%;
}

.star-content {
    padding-top: 30rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.star-btn {
    border: 1rpx solid rgba(145, 140, 140, 0.2);
    width: 90%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: white;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.star-btn-Img {
    margin-right: 8rpx;
    width: 46rpx;
    height: 46rpx;    
}

.star-image {
    width: 200rpx;
    height: 150rpx;
    margin-top: 300rpx;
}

.star-text {
    font-size: 30rpx;
    color: #918c8cef;
    margin-top: 20rpx;
}

.pay-star-scan {
    display: flex;
    flex-direction: row;
    height: 56rpx;
    align-items: center;
    width:70%;
    border: 1rpx solid rgba(145, 140, 140, 0.5);
    border-radius: 60rpx;  
    font-size: 30rpx;
}

.pay-star-input {
    flex: 1;
    font-size: 30rpx;
    padding-left: 10rpx;
}

.pay-star-image {
    width: 45rpx;
    height: 45rpx;
    align-self: center;
    margin-right: 25rpx;
}