.city-item-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 21rpx;
  background-color: #fff;
}

.city-item {
  background: #fff; /* margin-top: 5rpx; */
  width: 80%;
  margin-left: 6%;
