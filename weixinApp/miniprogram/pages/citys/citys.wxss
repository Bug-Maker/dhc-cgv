@import "../../style/guide.wxss";

.a-z {
  width: 35rpx;
  position: fixed;
  top: 112rpx;
  text-align: center;
  right: 5rpx;
  color: #39c;
  font-size: 30rpx; /* border: 1rpx solid #3399CC; */
}

.city-item-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 110rpx;
  background-color: #fff;
}

.city-item {
  background: #fff; /* margin-top: 5rpx; */
  width: 80%;
  padding-left: 5%;
  margin-left: 5%;
  height: 90rpx;
  font-size: 40rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ccc; /* border:1rpx solid red; */
}

.city-item-A-Z {
  width: 100%;
  height: 40rpx;
  font-size: 30rpx;
  padding-left: 10%;
  background-color: #eee;
  border-top: 1rpx solid #ccc;
  margin-top: -1rpx;
}

.search-box {
  top: 0;
  position: fixed;
  width: 100%; /* left:5%; */
  background: #eee;
  height: 110rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #ddd; /* border: 1rpx solid red; */
}

.search-input {
  height: 70rpx;
  line-height: 60rpx;
  width: 80%;
  margin-left: 7.5%;
  border-radius: 20rpx; /* border: 1rpx solid red; */
  background: #fff;
  margin-top: 20rpx;
  padding-left: 5%;
}

.search-input-placeholder {
  text-align: center;
}
