}

.search-input {
  height: 70rpx;
  line-height: 60rpx;
  width: 80%;
  margin-left: 7.5%;
  border-radius: 20rpx; /* border: 1rpx solid red; */
  background: #fff;
  margin-top: 20rpx;
  padding-left: 5%;
}

.search-input-placeholder {
  text-align: center;
}

.city-picker {

  background-color: #fff;
  margin-bottom: -10rpx;
}

.hotcity-common {
  font-size: 24rpx;
  color: #666;
  padding-bottom: 0;
  margin: 8rpx 0;
  margin-left: 16rpx;
}

.current-city {
  display: inline-block;
  border: 1rpx solid #fff;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  min-width: 149.5rpx;
  margin: 16rpx;
}

.hot-city {
  background-color: #fff;
  margin-bottom: -10rpx;
  display: flex;
  flex-wrap: wrap;
  padding-left: 5%;
}

.weui-grid {
  padding: 10rpx 0;
  width: 200rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  background-color: white;
  margin: 22rpx 0 8rpx 8rpx;
}

.weui-grid-label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.ul {
  display: block;
  color: grey;
  margin-left: 20rpx;
  margin-top:100rpx;
}

.li {
  display: block;
  font-weight: 100;
  font-size: 28rpx;
  padding: 16rpx 0;
}
