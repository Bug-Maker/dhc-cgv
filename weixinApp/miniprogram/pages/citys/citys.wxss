}

.search-box {
  top: 0;
  position: fixed;
  width: 100%; /* left:5%; */
  background: #eee;
  height: 110rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #ddd; /* border: 1rpx solid red; */
