.navbar {
  position: fixed;
  z-index: 9999;
  /* display: flex; */
  flex-direction: column;
  background: #fff;
  border-bottom: 1rpx solid #e6e6e6;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
}

.navbar .item {
  line-height: 70rpx;
  height: 70rpx;
  padding: 10rpx 25rpx;
  margin: 0 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  font-weight: 600;
}

.navbar .item.active {
  color: rgb(224, 166, 94);
  border-bottom: 5rpx solid rgb(224, 166, 94);
}

