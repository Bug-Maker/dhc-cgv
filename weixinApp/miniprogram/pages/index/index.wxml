    <text class="p">2. 切换到 "用户管理" 标签页</text>
    <text class="p">3. 查看访问小程序的用户列表</text> -->
    <import src='../../templates/movieList.wxml' />
    <view wx:for="{{hotMovieList}}" wx:key="{{hotMovieList}}">
      <template is='hotMovieTemplate' data="{{...item}}" />
    </view>
  </view>

</view>