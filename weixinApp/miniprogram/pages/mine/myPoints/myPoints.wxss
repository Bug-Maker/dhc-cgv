.pointinfo{
  width: 100%;
  font-size: 75%;
  /* background-color: #dee1e459; */
  border-bottom: 1px solid #efefef;
  display: flex;
  flex-direction: row;
  margin-top: 2%;
  
}
.textclass{
  padding-top: 2%;
