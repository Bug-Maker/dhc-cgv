<view class='container'>
  <view class="userinfo">
    <text class='pointtext'>当前拥有积分</text>
    <text class='pointnum'>10</text>
  </view>
  <view class='pointinfo'>
    <text class='textclass'>积分明细</text>
    <view class='textkong'>
    </view>
    <view class='select_box'>
      <view class='select' catchtap='selectTap'>
      <text class='righttext'>{{selectData[index]}}</text>
        <icon class='iconfont icon-jiantouxia icon-style'></icon>
      </view>
      <view class='option_box' style='height:{{show?(selectData.length>5?300:selectData.length*60):0}}rpx;'>
        <text class='option' style='{{index==selectData.length-1&&"border:0;"}}' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' catchtap='optionTap'>{{item}}</text>
      </view>
    </view>
  </view>
  <!-- <view>
    <text class='textCenter'>仅显示近12个月的记录</text>
  </view> -->
  <view class='itemTop'>
    <text class='textleft'>日期</text>
    <text class='textmiddle'>操作</text>
    <text class='textright'>积分变化</text>
  </view>
  
  <view class="flex-wrp-row item">
    <view class='flex-wrp-column content'>
      <view wx:for='{{pointInfo}}'  wx:key='this' class='msgtext' data-index='{{pointInfoIndex}}'>
      <text >{{item.a}}</text>
      </view>
    </view>
    <view class='flex-wrp-column content1'>
      <view wx:for='{{pointInfo}}'  wx:key='this' class='msgtext' data-index='{{pointInfoIndex}}'>
      <text >{{item.b}}</text>
      </view>
    </view>
    <view class='flex-wrp-column content2'>
      <view wx:for='{{pointInfo}}'  wx:key='this' class='msgtext' data-index='{{pointInfoIndex}}'>
      <text >{{item.c}}</text>
      </view>
    </view>
  </view>
</view>